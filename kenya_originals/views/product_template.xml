<odoo>

		<record id="product_category_form_view_form_inherit_ko" model="ir.ui.view">
            <field name="name">product.category.form.view.inherit.ko</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <field name="parent_id" position="after">
                    <field name="category_type" widget="radio"/>
                </field>
            </field>
        </record>

        <record id="product_template_form_view_form_inherit_ko" model="ir.ui.view">
            <field name="name">product.template.form.view.inherit.ko</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <field name="currency_id" position="before">
                    <field name="sku_size"/>
                    <field name="prod_type"/>
                    <field name="rrp"/>
                </field>
            </field>
        </record>

</odoo>